<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/callbacksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Callbacks will appear here"
        android:textSize="18sp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/makeCallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/callbacksTextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Совершить звонок" />

    <Button
        android:id="@+id/readContactsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/makeCallButton"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Читать контакты" />

</LinearLayout>